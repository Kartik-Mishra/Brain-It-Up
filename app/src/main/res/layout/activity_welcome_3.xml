<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.itrio.iqtest.Welcome_3"
    android:background="@color/welcome">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tb"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Get ready to test your intelligence with logic based questions."

        android:textSize="26sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:background="@color/welcome"/>
    </RelativeLayout>
    <Button
        android:id="@+id/wel3prev"
        android:text="Prev"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="@color/welcome"
        android:textSize="18dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/gotit"
        android:text="Got it!"
        android:layout_gravity="bottom|right"
        android:background="@color/welcome"
        android:textSize="18dp"/>


</FrameLayout>
